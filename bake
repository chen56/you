_ROOT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
_ROOT_BAKE_PATH="${_ROOT_DIR}/bake"

# è¿›å…¥è„šæœ¬æ‰€åœ¨ç›®å½•ï¼Œè¿™æ ·ä¸Šä¸‹æ–‡å°±æ˜¯æœ¬é¡¹ç›®äº†
cd "$_ROOT_DIR" || exit 200

